Component Startable {
  data running : int; // bool, = 0 or 1
  data start : int; // button
  data stop : int;  // button

  relation goodConfig(run: int, strt: int, stp: int) {
    // run <=> strt.enabled && stp.enabled <=> start.enabled 
    (0 <= run && run <= 1) && (0 <= strt && strt <= 1) && (0 <= stp && stp <= 1) && (run = 0) <=> (strt = 1) && (run = 1) <=> (strt = 0) && (strt = 1) <=> (stp = 0) && (strt = 0) <=> (stp = 1)
  }

  always goodConfig(running, start, stop);

  /*
  procedure start() {
    running = true;
    start = false;
    stop = true;
  }

  procedure stop() {
    running = false;
    start = true;
    stop = false;
  } 
  */

}

