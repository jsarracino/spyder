Component Shared {
  data l: int[];
  data r: int[];
  data m: int[];
  data s: int[];

  relation Sum(ls: int[], rs: int[], ss: int[]) {
    foreach (a, b, c) in (ls, rs, ss) {
      c = a + b
    }
  }

  relation Mid(ls: int[], rs: int[], ms: int[]) {
    foreach (a, b, c) in (ls, rs, ms) {
      c = (a + b) / 2
    }
  }

  always Sum(l, r, s);
  always Mid(l, r, m);
}

Component Main {
  data me: int[];
  data them: int[];
  data sum: int[];
  data mid: int[];

  using Shared(me, them, mid, sum);

  procedure addRow() {
    let i: int;
    let val: int;
    let val2: int;
    for (x: int, t: int) with idx in (me, them) {
      if (idx == i) {
        x = val;
        t = val2;
      }
    }
  }

