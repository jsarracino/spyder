Component Shared {
  data l: int[];
  data r: int[];
  data m: int[];

  relation Mid(ls: int[], rs: int[], ms: int[]) {
    foreach (a, b, c) in (ls, rs, ms) {
      c = (a + b) / 2
    }
  }

  always Mid(l, r, m);
  
}

