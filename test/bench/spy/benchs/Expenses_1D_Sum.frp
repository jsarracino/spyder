Component Shared {
  data l: int[];
  data r: int[];
  data m: int[];
  data s: int[];

  relation solveL(l: int[]) {
    foreach (ll, rr, mm, ss) in (l, r, m, s) {
      mm = (ll + rr) / 2 && ss = ll + rr
    }
    
  }

  relation solveR(r: int[]) {
    foreach (ll, rr, mm, ss) in (l, r, m, s) {
      mm = (ll + rr) / 2 && ss = ll + rr
    }
  }
  
}

