Component Shared {
  data l: int[];
  data r: int[];
  data m: int[];
  data s: int[];

  relation Mid(ls: int[], rs: int[], ms: int[]) {
    foreach (a, b, c) in (ls, rs, ms) {
      c = (a + b) / 2
    }
  }

  relation Sum(ls: int[], rs: int[], ss: int[]) {
    foreach (a, b, c) in (ls, rs, ss) {
      c = a + b
    }
  }

  always Mid(l, r, m);
  always Sum(l, r, s);
  
}

