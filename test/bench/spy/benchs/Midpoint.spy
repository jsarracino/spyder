Component Midpoint {
  data lhs : int;
  data rhs: int;
  data mid: int;

  relation midPoint(x: int, y: int, m: int) {
    (x + y) / 2 = m
  }
  
  always midPoint(lhs, rhs, mid);
  
}



Component Main {
  
