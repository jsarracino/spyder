Component Midpoint {
  data lhs : int;
  data rhs: int;
  data mid: int;

  relation midPoint(x: int, y: int, m: int) {
    ((x + y) / 2 = m) &&  x != y && y != m && x != m
  }
  
  always midPoint(lhs, rhs, mid);
  
}



