Component EqArrs {
  data lhs : int[];
  data rhs : int[];

  relation Eq(x: int[], y: int[]) {
    foreach (p, q) in (x, y) {
      p = q
    }
  }


  
  always Eq(lhs, rhs);
}


Component Main {
  data x: int[];
  data y: int[];

  using EqArrs(x, y);

  procedure incrX() {
    for (l:int, r: int) in (x, y) {
      l = 2 * r;
    }
  }
}