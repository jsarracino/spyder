Component EqArrs {
  data lhs : int[];
  data rhs : int[];

  relation Eq(x: int[], y: int[]) {
    foreach (p, q) in (x, y) {
      p = q
    }
  }


  
  always Eq(lhs, rhs);
}

Component EqVals {
  data l: int;
  data r: int;

  relation Eq(a: int, b: int) {
    a = b
  }

  always Eq(l, r);
}


